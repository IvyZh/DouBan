<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_book"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_book"
                android:src="@mipmap/icon_book"
                android:layout_width="32dp"
                android:layout_centerHorizontal="true"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/tv_book"
                android:layout_below="@id/iv_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="图书" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_movie"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_movie"
                android:src="@mipmap/icon_movie"
                android:layout_centerHorizontal="true"
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/tv_movie"
                android:layout_below="@id/iv_movie"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:text="电影" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_music"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_music"
                android:src="@mipmap/icon_music"
                android:layout_centerHorizontal="true"
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/tv_music"
                android:layout_below="@id/iv_music"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:text="音乐" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>